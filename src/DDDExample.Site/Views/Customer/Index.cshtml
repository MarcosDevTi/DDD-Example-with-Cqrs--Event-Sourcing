@using DDDExample.Cqrs.Query.Customer.Models
@using DDDExample.SharedKernel.Paging
@model DDDExample.SharedKernel.Paging.PagedResult<DDDExample.Cqrs.Query.Customer.Models.CustomerIndex>


<h2>Customers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table table-striped table-responsive-lg">
    <thead>
        <tr>


            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.FirstName)">First Name</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.LastName)">Last Name</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.Email)">Email</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.BirthDate)">Date</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.Street)">Street</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.Number)">Number</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.City)">City</a></th>
            <th><a paging="this.Model.Paging" property-name="@nameof(CustomerIndex.ZipCode)">ZipCode</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.BirthDate.ToShortDateString()</td>
                    <td>@item.Street</td>
                    <td>@item.Number</td>
                    <td>@item.City</td>
                    <td>@item.ZipCode</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<pager paged-result="this.Model"></pager>
